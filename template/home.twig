{% block modal %}
		<!-- Contact Modal-->
		<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title" id="contactModalLabel">Contactez-nous</h4>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<form action="\contact" method="POST" id="contactForm">
						<div class="modal-body">
							<div id="message-alert">
							</div>
							<div class="form-group">
								<label class="form-label" for="contact-firstName">Nom/Prénom</label>
								<input class="form-control" type="text" id="contact-name" name="name">
							</div>
							<div class="form-group">
								<label class="form-label" for="contact-email">Email</label>
								<input class="form-control" type="email" id="contact-email" name="email">
							</div>
							<div class="form-group">
								<label class="form-label" for="contact-message">Message</label>
								<textarea class="form-control" id="contact-message" name="message"></textarea>
							</div>
						</div>
						<div class="modal-footer">
                            <input type="hidden" id="contact-nameToken" name="nameToken" value="{{ token.nameToken}}">
                            <input type="hidden" id="contact-token" name="token" value="{{ token.token }}">
							<input type="submit" class="btn btn-primary" value="Envoyer">
						</div>
					</form>
				</div>
			</div>
		</div>
<script>
    $('#contactForm').submit(function (event) {
        event.preventDefault();

        var $form = $(this),
        $name = $form.find("#contact-name").val(),
        $email = $form.find("#contact-email").val(),
        $message = $form.find("#contact-message").val(),
        $nameToken = $form.find("#contact-nameToken").val(),
        $token = $form.find('#contact-token').val(),
        $url = $form.attr("action");
        $.ajax({
            type: "POST",
            url: $url,
            data: {
            name: $name,
            email: $email,
            message: $message,
            nameToken: $nameToken,
            token: $token
        },
        datatype: 'json',
        success: function ($response) {
            var $alert = JSON.parse($response);
        console.log($alert);

        var message = "<div id='message-alert-contact' class='alert alert-"
        + $alert.type
        + " alert-dismissible fade show' role='alert'>"
        + $alert.message
        +'<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>'
        +'</div>';
        $("#message-alert").append(message);
        }
        });
    });
</script>
