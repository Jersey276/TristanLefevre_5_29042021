{% extends "/admin/adminBase.twig" %}
{% block active2 %}active{% endblock %}
{% block title %}Admin - Articles {% endblock %}
{% block content %}
<div class="container my-1">
	<a class="btn btn-success w-100 my-3" href="\admin\post\add">Nouvel Article</a>
	{% if auth('Admin')%}
	<div id="accordion">
		<div class="card">
			<div class="card-header" id="headingOne">
			<h5 class="mb-0">
				<button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
				Mes articles
				</button>
			</h5>
		</div>

		<div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
			<div class="card-body">
			{% endif %}
				<ul class="list-group">
				{% for myPost in myPosts %}
					<li class="list-group-item">
						<div class="d-flex flex-row">
							<a class="mr-auto" href="{{myPost.getDisplayUrl()}}" target='_blank'><h5>{{ myPost.gettitlePost()}}</h5></a>
							{% if auth('Admin') %}
								<a href="#" class="btn btn-contact">commentaires</a>
							{% endif %}
							<a class="btn btn-warning" href="{{ myPost.getEditUrl() }}">Modifier</a>
							<a class="btn btn-danger" href="{{ myPost.getRemoveUrl() }}">Supprimer</a>
						</div>
					</li>
				{% endfor %}
				</ul>
			</div>
		{% if auth('Admin') %}
		</div>
		<div class="card">
			<div class="card-header" id="headingTwo">
				<h2 class="mb-0">
					<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
					Les autres articles
					</button>
				</h2>
			</div>

			<div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
				<div class="card-body">
					<ul class="list-group">
					{% for otherPost in otherPosts %}
						<li class="list-group-item">
						<div class="d-flex flex-row align-items-center">
							<a class="mb-0 mr-auto" href="{{otherPost.getDisplayUrl()}}" target='_blank'><h5>{{ otherPost.gettitlePost()}}</h5></a>
							<p class="mb-0  mr-5">{{ otherPost.getauthor()}}</p>
							<div>
								<a href="#" class="btn btn-contact">commentaires</a>
								<a class="btn btn-warning" href="{{ otherPost.getEditUrl() }}">Modifier</a>
								<a class="btn btn-danger" href="{{ otherPost.getRemoveUrl() }}">supprimer</a>
							</div>
						<div>
						</li>
					{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
	{% endif %}
</div>
{% endblock %}